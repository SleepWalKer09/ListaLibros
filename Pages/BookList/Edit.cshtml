@page
@model ListaLibros.Pages.BookList.EditModel

<br />
<h2 class="text-info">Edit new book</h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        <input type="hidden" asp-for="libro.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="libro.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="libro.Name" class="form-control" />
            </div>
            <span asp-validation-for="libro.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="libro.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="libro.Author" class="form-control" />
            </div>
            <span asp-validation-for="libro.Author" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="libro.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="libro.ISBN" class="form-control" />
            </div>
            <span asp-validation-for="libro.ISBN" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-6 offset-4">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to list</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}