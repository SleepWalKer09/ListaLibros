@page
@model ListaLibros.Pages.BookList.IndexModel

<br />
<div class="container row p-0 m-0 ">
    <div class="col-9">
        <h2 class="text-info">BookList</h2> 
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New Book</a>
    </div>

    <div class="col-12 border p-3 mt-3">
         <form method="post">
             @if (Model.libros.Count() > 0)
            {
             <table class="table table-striped border">
                 <tr class="table-secondary">
                     <th>
                         <label asp-for="libros.FirstOrDefault().Name"></label>
                     </th>
                     <th>
                         @*Html.DisplayNameFor(m=>m.libros.FirstOrDefault().Author)*@
                         <label asp-for="libros.FirstOrDefault().Author"></label>
                     </th>
                     <th>
                         @*Html.DisplayNameFor(m=>m.libros.FirstOrDefault().Author)*@
                         <label asp-for="libros.FirstOrDefault().ISBN"></label>
                     </th>
                     <th>
                         <label>Action Buttons</label>
                     </th>
                 </tr>

                 @foreach (var item in Model.libros)
                 {
             <tr>
                 <td>
                     @Html.DisplayFor(m => item.Name)
                 </td>
                 <td>
                     @Html.DisplayFor(m => item.Author)
                 </td>
                 <td>
                     @Html.DisplayFor(m => item.ISBN)
                 </td>
                 <td>
                     <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                     <a asp-page="Edit" asp-route-id="@item.Id" class=" = btn btn-success btn-sm text-white">Edit</a>
                 </td>
             </tr>
                 }
             </table>
            }
            else
            {
                 <p>No books available</p>
            }
         </form>
    </div>
</div>